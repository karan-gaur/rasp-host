<form class="form-signin" method="POST">

    <h1 class="form-signin-heading text-center" style="padding-bottom: 5px">Enter your credentials</h1>
    {{#if messages.error}}
        <div class='alert alert-danger'>
        {{messages.error}}
        </div>
    {{/if}}
    <br>
    <input type="email" name="email" class="form-control" placeholder="Email Address" require="">
    <br>
    <input type="password" name="password" class="form-control" placeholder="Enter Password" require="">
    <br>
    <button type="submit" class="btn btn-lg btn-primary btn-block">Sign In!!!</button>

    <br>
    <h4 class="text-center">Or</h4>
    <br>
    <a href="/auth/facebook" class="btn  btn-lg btn-success btn-block">Sign In with facebook</a>

</form>